<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>CharacterEncoding</filter-name>
        <filter-class>com.univ.vintoniuk.filters.CharacterEncoding</filter-class>
    </filter>
    <!--   <filter>
        <filter-name>RequestWithOutLoginSessionFilter</filter-name>
        <filter-class>filters.RequestWithOutLoginSessionFilter</filter-class>
    </filter>
   <filter-mapping>
        <filter-name>RequestWithOutLoginSessionFilter</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>-->
    <filter>
        <filter-name>BadRequestFilter</filter-name>
        <filter-class>com.univ.vintoniuk.filters.BadRequestFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>BadRequestFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CharacterEncoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Handler</servlet-name>
        <servlet-class>com.univ.vintoniuk.controlers.Handler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Handler</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Handler</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Handler</servlet-name>
        <url-pattern>/goToFind</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Handler</servlet-name>
        <url-pattern>/finding</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Handler</servlet-name>
        <url-pattern>/reserve</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Handler</servlet-name>
        <url-pattern>/wievReserves</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Handler</servlet-name>
        <url-pattern>/changeReserve</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Handler</servlet-name>
        <url-pattern>/goHomeAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Handler</servlet-name>
        <url-pattern>/addBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Handler</servlet-name>
        <url-pattern>/wievOldReserves</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Handler</servlet-name>
        <url-pattern>/myReserves</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Handler</servlet-name>
        <url-pattern>/returnBook</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Handler</servlet-name>
        <url-pattern>/myOldReserves</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Handler</servlet-name>
        <url-pattern>/logOut</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Handler</servlet-name>
        <url-pattern>/changeLanguage</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
